{
  "compilerOptions": {
    "target": "es2020",          // JS version (Node.js understands ES2020 well)
    "module": "commonjs",        // Standard for Node.js
    "rootDir": "./src",          // There is your code
    "outDir": "./dist",          // Where to put the finished code
    "esModuleInterop": true,     // Allows importing libraries (like express)
    "strict": true,              // Enables type checking (the main feature of TS)
    "skipLibCheck": true         // Speeds up work by ignoring other mistakes
  },
  "include": ["src"]
}